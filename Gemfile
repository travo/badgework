source 'https://rubygems.org'

gem 'rails', '4.0.3'

gem 'pg'
gem 'haml'
gem 'formtastic'

# Gems used only for assets and not required
# in production environments by default.
group :assets do
  gem 'sass-rails'
  gem 'coffee-rails'
  gem 'uglifier'
end

group :development, :test do
  gem 'rspec-rails'
  gem 'simplecov'
  gem 'jasmine'
  gem 'jslint_on_rails'
end

group :test do
  gem 'rr'
  gem 'machinist'
  gem 'shoulda-matchers'
end

gem 'jquery-rails'